<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:jaxrs="http://cxf.apache.org/jaxrs"
    xmlns:cxf="http://cxf.apache.org/core"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.2.xsd		   
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.2.xsd
		   http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
		   http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
		   http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

	<!-- Begin Sample : Uncomment for testing -->
	<!--
		If error bean sampleService :
		Right Click src/test/java
		Build Path -> Use as Source Folder
		Or
		Build Path -> Remove from Build Path
		Build Path -> Use as Source Folder
	 -->
	<context:component-scan base-package="id.co.tripoin.test.core.integration.service">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Component" />
    </context:component-scan>    
    <jaxrs:server id="sampleService" address="/sample">
        <jaxrs:serviceBeans>
        	<ref bean="sampleServiceImpl"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
			<ref bean="jsonProvider"/>
			<ref bean="signatureHeaderInbound"/>
		</jaxrs:providers>
    </jaxrs:server>
    <!-- End Sample : Uncomment for testing -->
    
</beans>